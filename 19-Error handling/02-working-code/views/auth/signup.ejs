<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/auth.css" />

<body>
  <%- include('../includes/navigation.ejs') %> <% if(errorMessages &&
  errorMessages.length > 0) { %> <% for(var m of errorMessages) {%>
  <div class="user-message user-message--error">
    <%= m.msg %>
  </div>
  <% } %> <% } %> <% if(infoMessages && infoMessages.length > 0) { %> <% for(var
  m of infoMessages) {%>
  <div class="user-message">
    <%= m %>
  </div>
  <% } %> <% } %>
  <main>
    <form class="login-form" action="/signup" method="POST" novalidate>
      <div class="form-control">
        <label for="email">Email</label>
        <input
          class="<%= errorMessages.find(e => e.param == 'email') ? 'invalid' : '' %>"
          type="email"
          name="email"
          id="email"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>"
        />
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input
          class="<%= errorMessages.find(e => e.param == 'password') ? 'invalid' : '' %>"
          type="password"
          name="password"
          id="password"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>"
        />
      </div>
      <div class="form-control">
        <label for="email">Confirm Password</label>
        <input
          class="<%= errorMessages.find(e => e.param == 'confirmPassword') ? 'invalid' : '' %>"
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>"
        />
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button class="btn" type="submit">Signup</button>
    </form>
  </main>
</body>
